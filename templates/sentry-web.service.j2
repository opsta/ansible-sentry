[Unit]
Description=Sentry Main Service
After=network.target
Requirement=sentry-worker.service
Requirement=sentry-cron.service

[Service]
Type=simple
User={{ sentry_system_user }}
Group={{ sentry_system_user }}
WorkingDirectory={{ sentry_virtualenv_path }}
Environment=SENTRY_CONF=/etc/sentry
ExecStart={{ sentry_virtualenv_path }}/bin/sentry run web

[Install]
WantedBy=multi-user.target
